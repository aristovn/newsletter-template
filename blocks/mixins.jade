mixin table(width, bgcolor)
  table(width=width, border="0", cellpadding="0", cellspacing="0", bgcolor=(bgcolor || "ffffff"))&attributes(attributes)
    block

mixin td(width, valign)
  td(width=width, valign=(valign || "top"))&attributes(attributes)
    block

mixin img(name, width, height)
  img(src="img/" + name, alt="", width=width, height=height, border="0",
      style="display: block; width: " + width + "px; height: " + height + "px; border: 0; " + (attributes.style || ''))

mixin font(color, size, face)
  font(color=color, face=face, style="font-size: #{size}px; color: ##{color}; " + (attributes.style || ''))
    block

mixin a(href)
  a(href=href, target="_blank")&attributes(attributes)
    block
